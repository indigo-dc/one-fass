# SConstruct for src/fass

import os
Import('env')

lib_name='fass_core'

# Sources to generate the library
source_files=[
    'Configurator.cc',
    'Fass.cc'
]

# Build library
env.StaticLibrary(lib_name, source_files)

# Build daemon
env.Prepend(LIBS=[
    'fass_core',
    'fass_log',
    'fass_rpcm',
    'fass_client',
    'fass_db'
])

if not env.GetOption('clean'):
    env.ParseConfig(("LDFLAGS='%s'") % (os.environ['LDFLAGS'],))

env.Program('fassd.cc')
